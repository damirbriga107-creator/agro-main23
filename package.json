{
  "name": "daorsagro",
  "version": "1.0.0",
  "description": "DaorsAgro - Complete Agricultural Financial Management Platform",
  "private": true,
  "workspaces": [
    "backend/shared/types",
    "backend/shared/config",
    "backend/shared/utils",
    "backend/shared/database",
    "backend/api-gateway",
    "backend/services/*",
    "frontend-app",
    "daorsagro-frontend"
  ],
  "scripts": {
    "install:all": "npm install",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write .",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "node basic-gateway.js",
    "dev:frontend": "npm run dev --workspace=frontend-app",
    "start:gateway": "node simple-api-gateway.js",
    "dev:gateway": "nodemon simple-api-gateway.js",
    "docker:build": "docker-compose build",
    "docker:build:cloud": "docker-compose -f docker-compose.buildcloud.yml build",
    "docker:up": "docker-compose up -d",
    "docker:up:cloud": "docker-compose -f docker-compose.buildcloud.yml up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "buildcloud:setup": "powershell -ExecutionPolicy Bypass -File scripts/setup-docker-build-cloud.ps1",
    "buildcloud:benchmark": "powershell -ExecutionPolicy Bypass -File scripts/benchmark-builds.ps1",
    "buildcloud:test": "powershell -ExecutionPolicy Bypass -File scripts/setup-docker-build-cloud.ps1 -TestBuild -ShowMetrics",
    "deploy:local": "powershell -ExecutionPolicy Bypass -File scripts/quick-deploy.ps1 -Environment local",
    "deploy:staging": "powershell -ExecutionPolicy Bypass -File scripts/quick-deploy.ps1 -Environment staging -BuildImages",
    "deploy:production": "powershell -ExecutionPolicy Bypass -File scripts/deploy-to-cloud.ps1 -Provider docker-swarm -Environment production",
    "deploy:aws": "powershell -ExecutionPolicy Bypass -File scripts/deploy-to-cloud.ps1 -Provider aws -Environment production -BuildImages -PushImages",
    "deploy:azure": "powershell -ExecutionPolicy Bypass -File scripts/deploy-to-cloud.ps1 -Provider azure -Environment production -BuildImages -PushImages",
    "deploy:gcp": "powershell -ExecutionPolicy Bypass -File scripts/deploy-to-cloud.ps1 -Provider gcp -Environment production -BuildImages -PushImages",
    "deploy:digitalocean": "powershell -ExecutionPolicy Bypass -File scripts/deploy-to-cloud.ps1 -Provider digitalocean -Environment production -BuildImages -PushImages",
    "validate": "node scripts/validate-setup.js",
    "health:check": "node scripts/health-check.js",
    "setup:dev": "npm run validate && npm run docker:up && npm run health:check && node scripts/setup-database.js",
    "setup:db": "node scripts/setup-database.js",
    "db:init": "npm run init-db --workspace=backend/shared/database",
    "db:migrate": "npm run migrate --workspace=backend/shared/database",
    "db:migrate:rollback": "npm run migrate:rollback --workspace=backend/shared/database",
    "db:migrate:status": "npm run migrate:status --workspace=backend/shared/database",
    "db:seed": "npm run seed --workspace=backend/shared/database",
    "db:seed:clear": "npm run seed:clear --workspace=backend/shared/database",
    "db:validate": "npm run validate --workspace=backend/shared/database",
    "db:setup": "npm run db:init",
    "test:endpoints": "node backend/scripts/test-dashboard-services.js",
    "test:integration": "mocha backend/tests/dashboard-integration.test.ts --require ts-node/register"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "axios": "^1.11.0",
    "chai": "^4.5.0",
    "chalk": "^5.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "mocha": "^10.8.2",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "agriculture",
    "financial-management",
    "microservices",
    "react",
    "node.js",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daorsagro/platform.git"
  },
  "dependencies": {
    "@clickhouse/client": "^0.2.10",
    "@elastic/elasticsearch": "^8.19.1",
    "@prisma/client": "^6.15.0",
    "@types/jsonwebtoken": "^9.0.10",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^2.0.9",
    "ioredis": "^5.7.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "morgan": "^1.10.0",
    "redis": "^4.6.15",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  }
}