# DaorsAgro Production Environment
# Secure configuration for production deployment

NODE_ENV=production
LOG_LEVEL=info
LOG_FORMAT=json

# Security
BCRYPT_ROUNDS=12
ENABLE_DEBUG_ROUTES=false
ENABLE_API_DOCS=false

# Service URLs (Production)
AUTH_SERVICE_URL=http://auth-service:3001
FINANCIAL_SERVICE_URL=http://financial-service:3002
SUBSIDY_SERVICE_URL=http://subsidy-service:3003
INSURANCE_SERVICE_URL=http://insurance-service:3004
ANALYTICS_SERVICE_URL=http://analytics-service:3005
DOCUMENT_SERVICE_URL=http://document-service:3006
NOTIFICATION_SERVICE_URL=http://notification-service:3007
IOT_SERVICE_URL=http://iot-service:3008

# Databases (Use secure passwords in production)
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_USER=your-postgres-user
POSTGRES_PASSWORD=your-secure-postgres-password

AUTH_DB_URL=postgresql://user:password@host:5432/auth_db
FINANCIAL_DB_URL=postgresql://user:password@host:5432/financial_db

MONGODB_URL=mongodb://user:password@host:27017/daorsagro
CLICKHOUSE_URL=http://your-clickhouse-host:8123
ELASTICSEARCH_URL=http://your-elasticsearch-host:9200
REDIS_URL=redis://your-redis-host:6379

# Message Queue
KAFKA_BROKERS=your-kafka-broker:9092

# JWT (MUST BE CHANGED FOR PRODUCTION!)
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-32-CHAR-SECRET
JWT_REFRESH_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-32-CHAR-REFRESH-SECRET

# External APIs
GOVERNMENT_API_KEY=your-production-government-api-key
INSURANCE_API_KEY=your-production-insurance-api-key
WEATHER_API_KEY=your-production-weather-api-key

# Email
SMTP_HOST=your-smtp-host
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password

# Storage
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket

# Monitoring
ENABLE_METRICS=true
APM_ENABLED=true
APM_SERVER_URL=http://your-apm-server:8200