# DaorsAgro Production Environment Configuration
# WARNING: Change all default passwords and secrets before deploying to production!

# Database Passwords
POSTGRES_PASSWORD=your-secure-postgres-password-change-this
MONGO_PASSWORD=your-secure-mongo-password-change-this
CLICKHOUSE_PASSWORD=your-secure-clickhouse-password-change-this

# JWT Secrets (Generate strong random strings for production)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-at-least-32-characters-long

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-app-password

# IoT Integration (ThingsBoard)
THINGSBOARD_URL=http://localhost:8080
THINGSBOARD_USERNAME=tenant@thingsboard.org
THINGSBOARD_PASSWORD=tenant

# Monitoring
GRAFANA_PASSWORD=admin123

# Application Configuration
NODE_ENV=production
API_BASE_URL=http://localhost:80
FRONTEND_URL=http://localhost:80

# Security Settings
CORS_ORIGIN=http://localhost:80
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Redis Configuration
REDIS_TTL=3600

# Kafka Configuration
KAFKA_CLIENT_ID=daorsagro-prod
KAFKA_GROUP_ID=daorsagro-prod-group

# ClickHouse Configuration
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=clickhouse
CLICKHOUSE_DATABASE=daorsagro

# MongoDB Configuration
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=daorsagro

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=daorsagro
POSTGRES_USER=postgres