# DaorsAgro Environment Configuration Template
# Copy this file to .env and fill in your actual values

#################################
# General Configuration
#################################
NODE_ENV=development
APP_NAME=DaorsAgro
APP_VERSION=1.0.0
API_BASE_URL=http://localhost:3000

#################################
# Database Configuration
#################################
# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/daorsagro
AUTH_DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/auth_db
FINANCIAL_DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/financial_db
FARM_DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/farm_db

# MongoDB
MONGODB_URL=mongodb://mongo:mongo123@localhost:27017/daorsagro?authSource=admin

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=3600

#################################
# Authentication & Security
#################################
JWT_SECRET=your-super-secret-jwt-key-change-in-production-32-chars-min
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-32-chars-min
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
BCRYPT_ROUNDS=12

#################################
# Message Queue & Events
#################################
# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=daorsagro-group
KAFKA_CLIENT_ID=daorsagro-client

# Event Topics
KAFKA_TOPIC_USER_EVENTS=user-events
KAFKA_TOPIC_FINANCIAL_EVENTS=financial-events
KAFKA_TOPIC_SUBSIDY_EVENTS=subsidy-events
KAFKA_TOPIC_INSURANCE_EVENTS=insurance-events
KAFKA_TOPIC_NOTIFICATION_EVENTS=notification-events

#################################
# Search & Analytics
#################################
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Analytics
ANALYTICS_DB_URL=clickhouse://localhost:8123/analytics

#################################
# External APIs
#################################
# Weather API
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Government Subsidy APIs
USDA_API_KEY=your-usda-api-key
USDA_API_URL=https://api.usda.gov

# Insurance Provider APIs
INSURANCE_PROVIDER_1_API_KEY=your-provider-1-api-key
INSURANCE_PROVIDER_1_URL=https://api.provider1.com

# Market Data
MARKET_DATA_API_KEY=your-market-data-api-key
MARKET_DATA_URL=https://api.marketdata.com

#################################
# File Storage
#################################
# Local Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=daorsagro-documents

# MinIO (alternative to AWS S3)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=daorsagro

#################################
# Email Configuration
#################################
# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid (alternative)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@daorsagro.com

#################################
# SMS Configuration
#################################
# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

#################################
# IoT Configuration
#################################
# ThingsBoard
THINGSBOARD_URL=http://localhost:8080
THINGSBOARD_USERNAME=tenant@thingsboard.org
THINGSBOARD_PASSWORD=tenant

# MQTT
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=daorsagro-mqtt-client

#################################
# Monitoring & Logging
#################################
# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Grafana
GRAFANA_URL=http://localhost:3001
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin123

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

#################################
# Rate Limiting
#################################
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX=5

#################################
# CORS Configuration
#################################
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

#################################
# Service URLs (for microservices)
#################################
AUTH_SERVICE_URL=http://localhost:3001
FINANCIAL_SERVICE_URL=http://localhost:3002
SUBSIDY_SERVICE_URL=http://localhost:3003
INSURANCE_SERVICE_URL=http://localhost:3004
ANALYTICS_SERVICE_URL=http://localhost:3005
DOCUMENT_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007

#################################
# Frontend Configuration
#################################
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=DaorsAgro
VITE_APP_VERSION=1.0.0
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_ENABLE_ANALYTICS=false

#################################
# Development & Testing
#################################
# Test Database
TEST_DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/daorsagro_test

# Debug
DEBUG=daorsagro:*
DEBUG_LEVEL=debug

# Performance
ENABLE_PROFILING=false
PROFILING_SAMPLE_RATE=0.1

#################################
# Production Overrides
# (These should be set in production environment)
#################################
# NODE_ENV=production
# LOG_LEVEL=warn
# JWT_SECRET=super-secure-production-key
# DATABASE_URL=production-database-url
# REDIS_URL=production-redis-url