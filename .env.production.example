# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Domain Configuration
DOMAIN=yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# Application Configuration
APP_VERSION=1.0.0
NODE_ENV=production

# Container Registry
REGISTRY=ghcr.io
IMAGE_NAME=yourusername/daorsagro
TAG=latest

# Database Configuration
POSTGRES_DB=daorsagro
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password

MONGO_DB=daorsagro
MONGO_USER=mongo
MONGO_PASSWORD=your-secure-mongo-password

REDIS_PASSWORD=your-secure-redis-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-at-least-32-characters

# External Services
EMAIL_SERVICE_URL=https://api.sendgrid.com/v3
EMAIL_API_KEY=your-sendgrid-api-key

SMS_SERVICE_URL=https://api.twilio.com
SMS_API_KEY=your-twilio-api-key

PUSH_SERVICE_URL=https://fcm.googleapis.com
PUSH_API_KEY=your-firebase-api-key

# Payment Gateway
PAYMENT_GATEWAY_URL=https://api.stripe.com
PAYMENT_API_KEY=your-stripe-api-key

# Government APIs
GOVERNMENT_API_URL=https://api.government.com
GOVERNMENT_API_KEY=your-government-api-key

# Insurance APIs
INSURANCE_API_URL=https://api.insurance.com
INSURANCE_API_KEY=your-insurance-api-key

# Cloud Storage (AWS S3 or compatible)
S3_BUCKET=daorsagro-documents
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1

# IoT Configuration
MQTT_BROKER_URL=mqtt://your-mqtt-broker.com:1883
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password

# Backup Configuration
BACKUP_S3_BUCKET=daorsagro-backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
MAX_CONNECTIONS=100
POOL_SIZE=10
CACHE_TTL=3600

# Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=https://yourdomain.com

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_IOT=true
ENABLE_MONITORING=true