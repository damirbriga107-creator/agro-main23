{
  "mcpServers": {
    "database-server": {
      "command": "node",
      "args": [
        "mcp-servers/database-server.js"
      ],
      "env": {
        "DATABASE_URL": "postgresql://user:pass@localhost:5432/daorsagro",
        "MONGODB_URL": "mongodb://localhost:27017/daorsagro",
        "REDIS_URL": "redis://localhost:6379"
      }
    },
    "api-server": {
      "command": "node",
      "args": [
        "mcp-servers/api-server.js"
      ],
      "env": {
        "AUTH_SERVICE_URL": "http://localhost:3001",
        "FINANCIAL_SERVICE_URL": "http://localhost:3002",
        "SUBSIDY_SERVICE_URL": "http://localhost:3003",
        "INSURANCE_SERVICE_URL": "http://localhost:3004",
        "ANALYTICS_SERVICE_URL": "http://localhost:3005",
        "DOCUMENT_SERVICE_URL": "http://localhost:3006",
        "NOTIFICATION_SERVICE_URL": "http://localhost:3007",
        "IOT_SERVICE_URL": "http://localhost:3008",
        "WEATHER_SERVICE_URL": "http://localhost:3009",
        "API_GATEWAY_URL": "http://localhost:3000"
      },
      "alwaysAllow": [
        "api_gateway_call"
      ]
    },
    "filesystem-server": {
      "command": "node",
      "args": [
        "mcp-servers/filesystem-server.js"
      ]
    },
    "code-analysis-server": {
      "command": "node",
      "args": [
        "mcp-servers/code-analysis-server.js"
      ]
    },
    "agricultural-server": {
      "command": "node",
      "args": [
        "mcp-servers/agricultural-server.js"
      ]
    }
  }
}