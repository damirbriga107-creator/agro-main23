{
  "name": "@daorsagro/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for DaorsAgro microservices",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@daorsagro/config": "workspace:*",
    "@daorsagro/utils": "workspace:*",
    "@daorsagro/types": "workspace:*",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "cors": "^2.8.5",
    "compression": "^1.8.1",
    "morgan": "^1.10.1",
    "winston": "^3.17.0",
    "redis": "^4.7.1",
    "http-proxy-middleware": "^2.0.9",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^2.1.0",
    "joi": "^17.13.3",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.11",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ]
  }
}