{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    { "path": "../shared/config" },
    { "path": "../shared/utils" },
    { "path": "../shared/types" }
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}