{
  "name": "@daorsagro/database",
  "version": "1.0.0",
  "description": "Shared database utilities and migrations for DaorsAgro platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "migrate": "npm run build && node dist/migrate.js",
    "migrate:rollback": "npm run build && node dist/migrate.js rollback",
    "migrate:status": "npm run build && node dist/migrate.js status",
    "seed": "npm run build && node dist/seed.js",
    "seed:clear": "npm run build && node dist/seed.js clear",
    "init-db": "npm run build && node dist/init-database.js",
    "validate": "npm run build && node dist/validate-schema.js",
    "type-check": "tsc --noEmit",
    "dev": "ts-node-dev --respawn --transpile-only src/init-database.ts"
  },
  "files": [
    "dist/**/*",
    "migrations/**/*",
    "seeds/**/*"
  ],
  "dependencies": {
    "pg": "^8.16.3",
    "mongodb": "^6.19.0",
    "redis": "^4.7.1",
    "@clickhouse/client": "^0.2.10",
    "@elastic/elasticsearch": "^8.19.1",
    "uuid": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.6.0",
    "@daorsagro/types": "workspace:*",
    "@daorsagro/config": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.8",
    "@types/bcryptjs": "^2.4.6",
    "rimraf": "^5.0.10",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "restricted"
  }
}